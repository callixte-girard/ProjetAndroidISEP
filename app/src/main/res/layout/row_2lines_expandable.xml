<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <!-- ta be flattened like the others -->
    <include layout="@layout/el_image"/>

    <LinearLayout
        android:id="@+id/recipe_labels"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/el_title"/>
        <include layout="@layout/el_subtitle"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/recipe_checkboxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@+id/recipe_labels">
<!--
        <CheckBox
            android:id="@+id/checkbox_show_ingr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"/>
-->
        <CheckBox
            android:id="@+id/checkbox_add_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <include layout="@layout/el_expandable_list"/>

</RelativeLayout>