<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- <include layout="@layout/el_image"/> -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/el_title"/>
            <include layout="@layout/el_subtitle"/>
        </LinearLayout>

        <include layout="@layout/el_checkbox_show_expandable"/>
        <include layout="@layout/el_checkbox_add_remove"/>
    </LinearLayout>

    <include layout="@layout/el_expandable_list"/>

</RelativeLayout>