<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/header_horizontal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/el_title"
            android:id="@+id/ingr_name_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <include layout="@layout/el_subtitle"
            android:id="@+id/ingr_qty_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ingr_checkboxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@+id/header_horizontal">
<!--
        <include layout="@layout/el_checkbox"
            android:id="@+id/checkbox_show_expandable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"/>
-->
        <include layout="@layout/el_checkbox"
            android:id="@+id/checkbox_bought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <include layout="@layout/el_expandable_list"/>

</RelativeLayout>