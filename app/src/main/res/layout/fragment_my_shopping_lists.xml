<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SearchView
        android:id="@+id/filter_shopping_lists"
        android:queryHint="Filter shopping lists"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/number_shopping_lists"/>

    <TextView
        android:id="@+id/number_shopping_lists"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/filter_shopping_lists"
        app:layout_constraintBottom_toTopOf="@id/my_shopping_lists" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_shopping_lists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/number_shopping_lists"
        app:layout_constraintBottom_toTopOf="@id/create_shopping_list"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_shopping_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/fui_ic_mail_white_24dp"/>


</RelativeLayout>